{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "build",
    "rootDir": "src",
  },
  "exclude": [
    "../node_modules/**/*",
  ],
  "include": [
    "./src/server.ts"
  ]
}