#!/command/with-contenv bashio
# shellcheck shell=bash
# ==============================================================================
# Home Assistant Community Add-on: Q Dashboard
# Starts q-dashboard
# ==============================================================================
bashio::log.info "Starting Q Dashboard..."

export NODE_ENV=production
export PORT=44920
export STORE_DIR=/data/store
export FORCE_DISABLE_SSL=true

cd /opt/ \
    || bashio::exit.nok "Could not change directory to application"

exec node /var/www/html/server.js